<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item   android:state_pressed="true">
        <shape >
            <gradient
                android:endColor="#FFFFC4"
                android:centerColor="#FFFFC4"
                android:startColor="#FFFFC4"
                android:angle="270"
                />

            <stroke
                android:width="1dp"
                android:color="#15305B"/>

        </shape>
    </item>

    <item android:state_focused="true">
        <shape >
            <gradient
                android:endColor="#FFFFC4"
                android:centerColor="#FFFFC4"
                android:startColor="#FFFFC4"
                android:angle="270"
                />

            <stroke
                android:width="1dp"
                android:color="#15305B"/>

        </shape>
    </item>

    <item>
        <shape >
            <solid
                android:color="@android:color/transparent"
                />

            <stroke
                android:width="2dp"
                android:color="#a25611"/>

        </shape>
    </item>

</selector>