<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/mainImg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/banner1"
            android:layout_below="@+id/bardd"  />

        <Button
            android:id="@+id/butn_Back"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right2"
            android:textSize="14sp"
            android:text="Back" />
        <Button
            android:id="@+id/butn_Cost_Breakup"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
            android:text="Cost Breakup"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right2"
            android:textSize="14sp"  />

        <Button
            android:id="@+id/butn_ExecutionSummary"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
            android:text="Execution Summary"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right2"
            android:textSize="14sp" />

        <Button android:id="@+id/butn_DeliveryAddress"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
            android:text="Delivery Address"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right2"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/butn_ViewQuatation"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right2"
            android:textSize="14sp"
            android:text="View Quotation" />

        <Button android:id="@+id/butn_HealthRelationship"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
            android:text="Health Relationship"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/ic_right2"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>