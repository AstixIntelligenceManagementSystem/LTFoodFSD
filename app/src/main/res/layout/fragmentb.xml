<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="10"
		android:background="@drawable/shadow_with_5dp"
		android:orientation="vertical">

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#949494"
			android:visibility="gone" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="32dp"
			android:background="#25c"
			android:orientation="horizontal"
			android:visibility="gone">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="center"
				android:text="Product"
				android:textColor="#fff"
				android:textSize="10sp" />

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#949494" />

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="center"
				android:text="RATE"
				android:textColor="#fff"
				android:textSize="10sp" />

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#949494" />

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_margin="1.5dp"
				android:layout_weight="1"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="center"
				android:text="QTY"
				android:textColor="#fff"
				android:textSize="10sp" />

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#949494" />

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_margin="1.5dp"
				android:layout_weight="1"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="center"
				android:text="QUOTATION"
				android:textColor="#fff"
				android:textSize="10sp" />

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="#949494" />

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_margin="1.5dp"
				android:layout_weight="2"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:gravity="center"
				android:text="REMARKS"
				android:textColor="#fff"
				android:textSize="10sp" />


		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#a25611"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_weight=".7"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="St.Rate"
				android:visibility="gone"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginTop="1dp"
				android:layout_marginBottom="1dp"
				android:textSize="10sp"
				android:textColor="#fff" />

			<TextView
				android:layout_width="0dp"
				android:visibility="gone"
				android:layout_weight="1.4"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="Last Trans Rt."
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginTop="1dp"
				android:layout_marginBottom="1dp"
				android:textSize="10sp"
				android:textColor="#fff"  />


			<LinearLayout
				android:layout_width="0dp"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_height="match_parent" >

				<TextView
					android:id="@+id/textView10"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_marginBottom="2dp"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="2dp"
					android:layout_weight="1"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:gravity="center"
					android:text="Offer Rt. "
					android:textColor="#fff"
					android:textSize="10sp" />

				<TextView
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"
					android:gravity="center"
					android:text="Pcs"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:textSize="10sp"
					android:textColor="#fff" />
				<TextView
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="Kg"
					android:textSize="10sp"
					android:layout_marginBottom="1dp"
					android:textColor="#fff"
					android:layout_height="0dp" />
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:orientation="horizontal"
					android:visibility="gone"
					android:layout_marginBottom="1dp"
					android:layout_weight="1">
					<TextView
						android:layout_width="0dp"
						android:layout_weight="1"
						android:text="Pcs"
						android:textSize="10sp"
						android:gravity="center"
						android:textColor="#fff"
						android:layout_height="match_parent" />
					<TextView
						android:layout_width="0dp"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Kg"
						android:textSize="10sp"
						android:textColor="#fff"
						android:layout_height="match_parent" />
				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:orientation="vertical"
				android:layout_weight="1"
				android:visibility="gone"
				android:layout_height="match_parent" >

				<TextView
					android:layout_width="match_parent"
					android:layout_weight="0.5"
					android:layout_height="0dp"
					android:gravity="center"
					android:text="GST %"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:textSize="10sp"
					android:textColor="#fff"  />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:gravity="center"
					android:text="UOM"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:layout_weight="0.5"
					android:textSize="10sp"
					android:textColor="#fff"  />

			</LinearLayout>
			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="Est Month Vol"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginTop="1dp"
				android:layout_marginBottom="1dp"
				android:textSize="10sp"
				android:textColor="#fff" />

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1.3"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="Change Validity"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginTop="1dp"
				android:layout_marginBottom="1dp"
				android:textSize="10sp"
				android:textColor="#fff"  />
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1.4"
				android:orientation="vertical"
				android:layout_height="match_parent">
				<TextView
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"
					android:gravity="center"
					android:text="Last Trans Rt."
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:textSize="10sp"
					android:textColor="#fff"  />
				<TextView
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:layout_height="0dp"
					android:gravity="center"
					android:text="Remark"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:layout_marginLeft="1dp"
					android:layout_marginRight="1dp"
					android:layout_marginTop="1dp"
					android:layout_marginBottom="1dp"
					android:textSize="10sp"
					android:textColor="#fff"  />
			</LinearLayout>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_margin="1dp"
				android:visibility="invisible"
				android:src="@drawable/delete_quotation" />


		</LinearLayout>

		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:id="@+id/dynamcDtaContnrScrollview">

		</ScrollView>

	</LinearLayout>

	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            
          <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#3f3a65"
	            android:layout_marginLeft="10dp"
	            android:textStyle="bold"
	            android:visibility="gone"
	            android:id="@+id/TextOfCheckbox"
	            android:textSize="13sp"
	            android:text="Rate different to be claimed"/>
        
	        <CheckBox 
	            android:layout_width="wrap_content"
	            android:id="@+id/CB_rateDistibution"
	            android:visibility="gone"
	            android:layout_height="wrap_content"/>
        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:visibility="gone"
	            android:padding="5dp"
	            android:id="@+id/textRateDistribution"
	            android:textSize="11sp"
	            android:text=""/>
	        
        </LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="2dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btnPrevious"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="16dp"
			android:layout_weight="1"
			android:background="@drawable/custom_button"
			android:text="Previous"
			android:textColor="#fff"
			android:textSize="11sp"
			android:textStyle="bold" />


		<Button
			android:id="@+id/Done_btn"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_weight="1"
			android:background="@drawable/custom_button"
			android:text="Submit Quotation"
			android:textColor="#fff"
			android:textSize="11sp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/btn_Save_TakeOrder"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="16dp"
			android:layout_weight="1"
			android:background="@drawable/custom_button"
			android:text="Save &amp; Take Order"
			android:textColor="#fff"
			android:textSize="11sp"
			android:textStyle="bold" />


	</LinearLayout>

</LinearLayout>
